{
  "collectionName": "components_image_blocks",
  "info": {
    "displayName": "Image Block",
    "description": "A block for inserting images with optional caption and alignment"
  },
  "options": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "caption": {
      "type": "text"
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right", "full"],
      "default": "center"
    },
    "size": {
      "type": "enumeration",
      "enum": ["small", "medium", "large", "full"],
      "default": "full"
    }
  }
}

